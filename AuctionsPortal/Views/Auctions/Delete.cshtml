@model BartlomiejJagielloLab5ZadDom.Models.Auction

@using (Html.BeginForm("Delete", "Auctions", FormMethod.Post))
{
    <!-- Display which auction is deleted -->
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt class="col-sm-10">
            Bids that will be deleted:
        </dt>
    </dl>
    <!-- Display all bids deleted-->
    @foreach (var bid in Model.Bids)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => bid.User.Login)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => bid.User.Login)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => bid.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => bid.Price)
            </dd>
        </dl>
    }

    <!-- Delete auction and it's bids button -->
    <input type="submit" value="delete" class="btn btn-danger" />
}